<%- include('partials/_header') -%>

<body>

  <%- include('partials/_navigation') -%>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('img/post-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="post-heading">
            <h1><%= post.title %> </h1>
            <span class="meta">Posted by
              <a href="#">Author</a>
              <%= post.dateCreated %></span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Post Content -->
  <article>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
            <%= post.detail %>
        </div>
      </div>
    </div>
    <br><br>
    <div class="row" style="justify-content:center">
      <div class="text-center">
        <a href="/posts/edit/<%= post._id %>" class="btn btn-primary mx-3"><span>Update Details</span></a>	
      </div>
      <div class="text-center">
        <a href="/posts/<%= post._id %>?_method=DELETE" class="btn btn-danger mx-3" 
          onclick="return confirm('This will permanently remove the post, are you sure?')"><span>Delete Post</span></a>	
      </div>
    </div>

  </article>

  <hr>

  <%- include('partials/_footer') -%>

</body>

</html>
